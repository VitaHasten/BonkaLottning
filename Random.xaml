<Window x:Class="BonkaLottning.Random"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BonkaLottning"
        mc:Ignorable="d"
        Title="Random" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="/altBackground.png"/>
        </Canvas.Background>
        
        <DataGrid x:Name="Lag1" Height="770" Width="440" d:ItemsSource="{d:SampleData ItemCount=4}" HorizontalAlignment="Left" Canvas.Left="34" VerticalAlignment="Top" Canvas.Top="52" FontSize="24"/>
        <DataGrid Height="770" Width="440" d:ItemsSource="{d:SampleData ItemCount=4}" HorizontalAlignment="Left" Canvas.Left="1449" VerticalAlignment="Top" Canvas.Top="52"/>
        <DataGrid Height="770" Width="440" d:ItemsSource="{d:SampleData ItemCount=4}" HorizontalAlignment="Center" Canvas.Left="978" VerticalAlignment="Top" Canvas.Top="52"/>
        <DataGrid Height="770" Width="440" d:ItemsSource="{d:SampleData ItemCount=4}" HorizontalAlignment="Left" Canvas.Left="504" VerticalAlignment="Top" Canvas.Top="52"/>

    </Canvas>
</Window>
